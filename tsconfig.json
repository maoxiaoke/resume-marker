{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "es2020",
    "skipDefaultLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["client/**", "themes/**"]
}